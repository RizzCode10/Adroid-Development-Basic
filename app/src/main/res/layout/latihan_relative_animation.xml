<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/arrow_left"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/ayaka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/merek1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamishato Ayaka"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gambar1"
        />
    <TextView
        android:id="@+id/harga1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$35.71"
        android:textStyle="bold"
        android:textColor="#02859A"
        android:textSize="27sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/merek1"
        />
    <ImageButton
        android:id="@+id/ibFav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_favorite_24"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/merek1"
        />
    <ImageButton
        android:id="@+id/ibstar1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/yllwstar"
        android:layout_marginTop="5dp"

        android:layout_marginStart="15dp"
        android:layout_alignParentStart= "true"
        android:layout_below="@+id/harga1"
        />
    <ImageButton
        android:id="@+id/ibstar2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/yllwstar"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/harga1"
        android:layout_toRightOf="@+id/ibstar1"
        />
    <ImageButton
        android:id="@+id/ibstar3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/yllwstar"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/harga1"
        android:layout_toRightOf="@+id/ibstar2"
        />
    <ImageButton
        android:id="@+id/ibstar4"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:background="@drawable/yllwstar"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/harga1"
        android:layout_toRightOf="@+id/ibstar3"
        />
    <ImageButton
        android:id="@+id/ibstar5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/graystar"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/harga1"
        android:layout_toRightOf="@+id/ibstar4"
        />
    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#BCB9B9"
        android:layout_below="@+id/ibstar1"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textStyle="bold"
        android:textColor="#636363"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/garis"
        />
    <TextView
        android:id="@+id/namaBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GGenshin"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/garis"
        />
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe"
        android:textStyle="bold"
        android:textColor="#636363"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/brand"
        />
    <TextView
        android:id="@+id/pjType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frostflake Heron \nGenshin Impact 1/7"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="162dp"
        android:layout_below="@+id/brand"
        />
    <TextView
        android:id="@+id/dimention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimensi"
        android:textStyle="bold"
        android:textColor="#636363"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pjType"
        />
    <TextView
        android:id="@+id/pjdimensie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3x4.5x1.9 inches"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="162dp"
        android:layout_below="@+id/pjType"
        />
    <Button
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:text="Purchase"
        android:backgroundTint="#02859A"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>