<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarRelativActivity">

    <TextView
        android:id="@+id/kiriAtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiri Atas"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/kananAtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanan Atas"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/tengahAtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tengah Atas"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/kiriTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiri Tengah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/kananTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanan Tenga"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tengahtengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tengah tengah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/katatengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aku Muncul diatas Tengah"

        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#00B8D4"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tengahtengah"
        />
    <TextView
        android:id="@+id/katatengah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aku Muncul dibawah Tengah"

        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#00B8D4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tengahtengah"
        />
    <TextView
        android:id="@+id/kiriTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aku Muncul diatas Tengah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/kananTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanan Tenga"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/tengahbawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tengah tengah"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>